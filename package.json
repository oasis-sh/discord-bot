{
    "name": "@oasis-sh/discord-bot",
    "version": "1.0.0",
    "description": "The official discord bot for oasis.",
    "main": "dist/index.js",
    "private": true,
    "scripts": {
        "test": "eslint .",
        "pre-build": "rimraf dist",
        "build": "tsc && node-gyp configure && node-gyp build",
        "post-build": "tsc-alias",
        "prettier": "prettier . --write",
        "pre-start": "yarn db:generate && yarn build",
        "start": "pm2-runtime start dist/index.js",
        "pre-lint": "yarn constraints",
        "lint": "eslint . --fix",
        "db:generate": "prisma generate",
        "postinstall": "is-ci || husky install",
        "setup": "node dist/utils/setup"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oasis-sh/discord-bot.git"
    },
    "keywords": [
        "discord",
        "bot",
        "discord-bot",
        "discord.js",
        "slash-commands",
        "oasis",
        "oasis-sh"
    ],
    "author": {
        "email": "mail@tomio.codes",
        "name": "1chiSensei",
        "url": "https://github.com/1chiSensei"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/oasis-sh/discord-bot/issues"
    },
    "homepage": "https://github.com/oasis-sh/discord-bot#readme",
    "engines": {
        "node": ">=14.0.0",
        "yarn": ">=2"
    },
    "dependencies": {
        "@discordjs/opus": "^0.5.2",
        "@discordjs/voice": "^0.3.0",
        "@naval-base/ms": "^3.1.0",
        "@octokit/request": "^5.5.0",
        "@prisma/client": "^2.24.1",
        "@sapphire/decorators": "^2.1.2",
        "@sapphire/discord-utilities": "^2.1.2",
        "@sapphire/discord.js-utilities": "^1.5.8",
        "@sapphire/fetch": "^1.0.2",
        "@sapphire/framework": "^1.0.2",
        "@sapphire/plugin-logger": "^1.0.12",
        "@sapphire/plugin-subcommands": "^1.0.5",
        "@sapphire/type": "^2.0.4",
        "@sapphire/utilities": "^1.5.2",
        "@skyra/editable-commands": "^1.0.0",
        "bindings": "^1.5.0",
        "canvas": "^2.8.0",
        "chalk": "^4.1.1",
        "common-tags": "^1.8.0",
        "discord-api-types": "^0.18.1",
        "discord.js": "dev",
        "dotenv": "^10.0.0",
        "gifencoder": "^2.0.1",
        "libsodium-wrappers": "^0.7.9",
        "node-addon-api": "^3.2.1",
        "node-gyp": "^8.1.0",
        "pm2": "^4.5.6",
        "prisma": "^2.24.1",
        "reflect-metadata": "^0.1.13",
        "shelljs": "^0.8.4",
        "tio.js": "^1.0.9",
        "tslib": "^2.2.0",
        "tweetnacl": "^1.0.3",
        "twemoji-parser": "^13.1.0",
        "weird-to-normal-chars": "^1.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@types/bindings": "^1",
        "@types/common-tags": "^1",
        "@types/eslint": "^7",
        "@types/eslint-plugin-prettier": "^3",
        "@types/gifencoder": "^2.0.1",
        "@types/is-ci": "^3",
        "@types/libsodium-wrappers": "^0",
        "@types/node-fetch": "^2.5.10",
        "@types/prettier": "^2",
        "@types/rimraf": "^3",
        "@types/shelljs": "^0",
        "@types/twemoji-parser": "^12.1.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.28.0",
        "eslint-config-marine": "^9.0.6",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "is-ci": "^3.0.0",
        "prettier": "^2.3.0",
        "rimraf": "^3.0.2",
        "tsc-alias": "^1.2.11",
        "typescript": "^4.3.2"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "root": true,
        "rules": {
            "@typescript-eslint/no-misused-promises": "off",
            "@typescript-eslint/no-floating-promises": "off",
            "@typescript-eslint/no-dynamic-delete": "off",
            "@typescript-eslint/no-non-null-asserted-optional-chain": "off",
            "@typescript-eslint/no-var-requires": "off",
            "@typescript-eslint/no-require-imports": "off",
            "@typescript-eslint/restrict-template-expressions": "off",
            "@typescript-eslint/prefer-for-of": "off",
            "@typescript-eslint/switch-exhaustiveness-check": "off",
            "@typescript-eslint/dot-notation": "off"
        }
    },
    "prettier": {
        "printWidth": 120,
        "useTabs": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "endOfLine": "lf",
        "tabWidth": 4
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
