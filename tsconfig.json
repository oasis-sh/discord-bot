{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "ES6"],
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "es6",
		"sourceMap": true,
		"inlineSources": true,
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"paths": {
			"@structures/*": ["src/structures/*"],
			"@events/*": ["src/events/*"],
			"@commands/*": ["src/commands/*"],
			"@utils/*": ["src/utils/*"]
		}
	}
}
